{
    "manifest_version": 2,
    "version": "2.0",
    "name": "Cupertino: Unofficial macOS theme for Firefox",
    "short_name": "Cupertino",
    "author": "Corbin Davenport",
    "description": "A Firefox theme designed to match the macOS color scheme and design.",
    "homepage_url": "https://github.com/corbindavenport/cupertino",
    "icons": {
        "32": "img/icon_x32.png",
        "48": "img/icon_x48.png",
        "128": "img/icon_x128.png"
    },
    "theme": {
        "images": {
            "theme_ntp_background" : "img/icon_x128.png"
        },
        "colors": {
            "frame": "rgb(250, 250, 250)",
            "frame_inactive": "rgb(250, 250, 250)",
            "toolbar": "rgb(250, 250, 250)",
            "toolbar_field": "rgb(250, 250, 250)",
            "toolbar_field_border": "rgb(220, 220, 220)",
            "toolbar_text": "rgb(74, 74, 74)",
            "toolbar_field_text": "rgb(74, 74, 74)",
            "toolbar_top_separator": "rgb(250, 250, 250)",
            "toolbar_bottom_separator": "rgb(230, 230, 230)",
            "tab_selected": "rgb(231, 223, 255)",
            "tab_text": "rgb(39, 35, 20)",
            "tab_line": "rgb(231, 223, 255)",
            "tab_background_text": "rgb(74, 74, 74)",
            "tab_background_text_inactive": "rgb(190, 190, 190)",
            "sidebar": "rgb(246, 246, 246)",
            "sidebar_text": "rgb(74, 74, 74)",
            "sidebar_border": "rgb(246, 246, 246)",
            "popup": "rgb(250, 250, 250)",
            "popup_text": "rgb(74, 74, 74)",
            "popup_highlight": "rgb(44, 146, 251)",
            "popup_border": "rgb(195, 192, 190)",
            "button_background_hover": "rgb(231, 231, 231)",
            "button_background_active": "rgb(218, 218, 218)"
        }
    },
    "dark_theme": {
        "colors": {}
    }
}